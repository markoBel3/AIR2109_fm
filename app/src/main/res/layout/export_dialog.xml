<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/export_menu_rounded_corner_view"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/export_pdf"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="PDF"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/export_jpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="JPG/JPEG"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/export_png"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="PNG"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/exportSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/export_save_button_rounded_corner_view"
                android:minHeight="35dp"
                android:paddingHorizontal="80dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>